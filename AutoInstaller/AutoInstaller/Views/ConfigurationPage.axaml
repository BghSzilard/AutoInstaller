<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
			 xmlns:vm="using:AutoInstaller.ViewModels"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="AutoInstaller.Views.ConfigurationPage"
			 x:DataType="vm:ConfigurationViewModel"
			 x:CompileBindings="True">
	<UserControl.DataContext>
		<vm:ConfigurationViewModel></vm:ConfigurationViewModel>
	</UserControl.DataContext>
	<StackPanel>
		<TextBlock Text="Configuration folder (this is where all of your configuration files are stored)"></TextBlock>
		<TextBox Text="{Binding FolderPath}" Margin="0 0 300 0"></TextBox>
		<Button Content="Modify"></Button>
	</StackPanel>
</UserControl>
